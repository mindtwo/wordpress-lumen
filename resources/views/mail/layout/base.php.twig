<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 3.2//EN">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
</head>
<body style="background:{{ data.primary_color }};">
<table width="100%" border="0" cellspacing="0" cellpadding="0" style="background:{{ data.primary_color }};">
    <tr>
        <td height="30"></td>
    </tr>
    <tr>
        <td>
            <table width="80%" border="0" cellpadding="0" cellspacing="0" align="center" style="background:#fff; min-width:400px;">
                <tr>
                    <td>
                        <table width="100%" border="0" cellpadding="0" cellspacing="0" style="background:{{ data.secondary_color }};">
                            <tr>
                                <td height="30"></td>
                            </tr>
                            <tr>
                                <td width="20"></td>
                                <td width="100%">
                                    <table width="100%" border="0" align="center" cellpadding="0" cellspacing="0">
                                        <tr>
                                            <td align="left" valign="top" style="padding:0 25px;">
                                                <a href="{{ data.homepage_href }}" target="_blank"><img src="{{ data.logo|raw }}" style="max-height: 80px; width: auto;" /></a>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <td width="20"></td>
                            </tr>
                            <tr>
                                <td height="30"></td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td>
                        <table width="100%" border="0" cellpadding="0" cellspacing="0">
                            <tr>
                                <td height="20"></td>
                            </tr>
                            <tr>
                                <td width="20"></td>
                                <td width="100%" style="padding:0 25px;">
                                    {% block content %}{% endblock %}
                                </td>
                                <td width="20"></td>
                            </tr>
                            <tr>
                                <td height="20"></td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td>
                        <table width="100%" border="0" cellpadding="0" cellspacing="0" style="background:{{ data.secondary_color }};">
                            <tr>
                                <td height="20"></td>
                            </tr>
                            <tr>
                                <td width="20"></td>
                                <td width="100%" style="padding:0 25px;">
                                    <p style="font-family:Arial, Helvetica, sans-serif; color:{{ data.secondary_text_color }}; line-height:12px; font-size:12px;">
                                        {{ data.subline|raw }}
                                    </p>
                                </td>
                                <td width="20"></td>
                            </tr>
                            <tr>
                                <td height="20"></td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td height="44"></td>
    </tr>
</table>
</body>
</html>
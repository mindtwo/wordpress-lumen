{% extends "mail/layout/base.php.twig" %}
{% block content %}
    <h1 style="font-family:Arial, Helvetica, sans-serif; color:#3b3b3b; line-height:24px; font-weight:bold; font-size:22px;">
        Anfrage von: {{ name }}
    </h1>
    <p style="font-family:Arial, Helvetica, sans-serif; color:#666666; line-height:24px; font-size:16px; margin-top: 5px;">
        Folgende Nachricht wurde Ã¼bermittelt:
    </p>
    <div style="font-family:Arial, Helvetica, sans-serif; color:#666666; padding: 20px 20px 20px; line-height:24px; font-size:16px; display:block; border:1px solid #eee;">
        <strong style="color: #3b3b3b; font-weight:bold;">Name:</strong> {{ name }}
        <br />
        <strong style="color: #3b3b3b; font-weight:bold;">E-Mail Adresse:</strong> {{ email }}
        <br />
        <strong style="color: #3b3b3b; font-weight:bold;">Telefon:</strong> {{ phone }}
        <br />
        {% if subject %}
            <strong style="color: #3b3b3b; font-weight:bold;">Betreff:</strong> {{ subject }}
            <br />
        {% endif %}
        {% if location %}
            <strong style="color: #3b3b3b; font-weight:bold;">Standort/Filiale:</strong> {{ location }}
            <br />
        {% endif %}
        <strong style="color: #3b3b3b; font-weight:bold;">Nachricht:</strong>
        <div>
            {{ message|raw }}
        </div>
    </div>
    <br />
{% endblock %}
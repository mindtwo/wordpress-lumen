{% extends "layout/base.php.twig" %}
{% block content %}
    <h1>{{post.title}}</h1>
    <div class="body">
        {{post.content}}
        {% for post in posts %}
        <div class="post col-md-6" rel="bookmark">
            <h2 class="post-headline"><a href="{{function('get_esc_permalink')}}">{{post.post_title}}</a></h2>
            <div class="post-content">
                {{function('get_the_excerpt')}}
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}